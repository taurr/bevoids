  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'bevoids'",
      "cargo": {
        "args": ["build", "--bin=bevoids", "--package=bevoids"],
        "filter": {
          "name": "bevoids",
          "kind": "bin"
        }
      },
      "env": {
        "RUST_LOG": "info,bevoids=debug,wgpu_core=warn"
      },
      "args": ["--assets", "${workspaceFolder}/bevoids_game/assets"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'bevoids'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=bevoids", "--package=bevoids"],
        "filter": {
          "name": "bevoids",
          "kind": "bin"
        }
      },
      "args": ["--assets", "${workspaceFolder}/bevoids_game/assets"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
