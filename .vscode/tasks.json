{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Check",
      "detail": "Run a compile check",
      "type": "shell",
      "command": "cargo check --all-features --all-targets",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Test",
      "detail": "Runs all tests",
      "type": "shell",
      "command": "cargo test --workspace --all-features --no-fail-fast -- --nocapture",
      "options": {"env": {
          "RUST_LOG": "debug"
      }},
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Run release",
      "detail": "Runs binary in release mode",
      "type": "shell",
      "command": "cargo run --release --bin bevoids",
      "options": {
        "env": {
          "RUST_LOG": "error"
        }
      },
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Update",
      "detail": "Update dependencies (Cargo.lock)",
      "type": "shell",
      "command": "cargo update",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Clippy",
      "detail": "Look for Clippy errors",
      "type": "shell",
      "command": "cargo clippy --all-features --all-targets -- -D warnings",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Format",
      "detail": "Format all source",
      "type": "shell",
      "command": "cargo fmt --all --quiet",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false,
      }
    },
  ]
}